<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:src="@drawable/white-and-black-projector-on-white-surface-beside-case-821668"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="98dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/imageView2"/>
    <ImageView
            android:src="@drawable/white-and-black-projector-on-white-surface-beside-case-821668"
            android:layout_width="491dp"
            android:layout_height="429dp"
            android:id="@+id/imageView4"
            tools:src="@tools:sample/backgrounds/scenic"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/imageView2" android:layout_marginLeft="8dp"
            tools:layout_editor_absoluteY="-59dp" app:layout_constraintHorizontal_bias="0.395"/>
    <ImageView
            android:src="@drawable/white-and-black-projector-on-white-surface-beside-case-821668"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="171dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/imageView5"/>
    <EditText
            android:layout_height="123dp"
            android:inputType="textPersonName"
            android:text="This is our first image welcome all"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.043" android:layout_width="wrap_content"/>
    <Button
            android:text="NEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="136dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.908"/>
</android.support.constraint.ConstraintLayout>